            {{ form_errors(form) }}
        </div>
        <div class="items_btn">
            <button type="button" id="new-item" value="stage">ajouter</button>
            <button type="button" id="delete-item" value="stage">Supprimer</button>
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.user) }}
        <div class="form-group" id="userSearch_content">
            <input type="text" id="userSearch" placeholder="Nom d'utilisateur"></input>
            <div class='result_search_content'>
                {# --- partial search result --- #}
            </div>
        </div>
        {{ form_widget(form.user) }}
        <div class="form_error">
            {{ form_errors(form) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile) }}
        <div class="form_error">
            {{ form_errors(form) }}
        </div>
