        {{ form_label(form.restTime) }}
        {{ form_widget(form.restTime) }}
        <div class="form_error">
            {{ form_errors(form) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.diet) }}
        {{ form_widget(form.diet) }}
