      {{ form_start(form, {'action': path('set_commentary', {recipeid: recipe.id}) }) }}
      
      <div class="commentary_form_row">
      <div class="commentary_form_row_left">
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            <div class="form_error">
                {{ form_errors(form) }}
            </div>
        </div>
      </div>
      <div class="commentary_form_row_right">
        <div class="form-group">
            {{ form_label(form.score) }}
            <div class="score_form">
            {% for i in 1..5 %}
                <i class="star-form" data-value="{{ i }}">
                    <svg class="starFull-form" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                </i>
            {% endfor %}
            </div>
        </div>
      </div>
      </div>

      <div class="form-group">
          {{ form_label(form.text) }}
          {{ form_widget(form.text) }}
          <div class="form_error">
              {{ form_errors(form) }}
          </div>
      </div>

      <div class="form-group">
          {{ form_widget(form.score) }}
      </div>

      <div class="form-group-submit">
          {{ form_row(form.submit) }}
      </div>
      {{ form_end(form) }}