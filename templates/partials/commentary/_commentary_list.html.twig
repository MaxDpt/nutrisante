{% for commentary in commentarys %}
<div class="commentary_list">
    <div class="commentary_header">
        <div class="commentary_header_left">
            <div class="commentary_name">
                <h2>{{commentary.name}}</h2>
            </div>
            <div class="commentary_score">
            {% for i in 1..5 %}
            {% if i <= commentary.score %}
                <p class="star">
                <svg class="starFull" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                </svg>
                </p>
            {% else %}
                <p class="star">
                <svg class="starEmpty" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                </svg>
                </p>
            {% endif %}
            {% endfor %}
            </div>
        </div>
        <div class="commentary_header_right">
            <div class="commentary_date">
                <p>{{commentary.createdAt|date('d/m/y')}}</p>
                {% if userConnected and userConnected.roles[0] == 'ROLE_ADMINISTRATOR' %}
                <div class="commentary_delete">
                    <button value="{{commentary.id}}">
                    <svg id="icon_delete" xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                    </svg>
                    </button>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="commentary_body">
        <p>{{commentary.text}}</p>
    </div>
</div>
{% endfor %}
