{% set queryParams = app.request.query.all %}
{% set totalPage = ((totalUsers / usersLimit)|round(0, 'ceil')) %}

<div class="users_table">
<div class="table_header">
<div class="pagination">
  {# Pagination des utilisateurs #}
  <button id="usersPrev" >Prev</button>
  {% for pageItem in 1..(((totalUsers / usersLimit)|round(0, 'ceil'))) %}
    <button id="usersPageItem" value="{{pageItem}}" >{{pageItem}}</button>
  {% endfor %}
  <button id="usersNext" >Next</button>
</div>
<div class="new_btn">
  {# Ajout d'un utilisateur #}
  <button id="new_user">Nouvelle utilisateur</button>
</div>
</div>

<div class="users_table_content">
    {% include "partials/users/_users_table.html.twig" %}
</div>
</div>

